<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="15dp"
    android:background="@color/white"
    android:elevation="0dp"
    app:cardBackgroundColor="@null"
    app:cardCornerRadius="10dp"
    app:cardElevation="0dp"
    app:cardMaxElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/article_img"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/card_bg"
            android:cropToPadding="false"
            android:scaleType="centerCrop"
            android:src="@drawable/header1" />

        <TextView
            android:id="@+id/article_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="DA vows to reinforce agri-based industries, supports Livestock and Aquaculture Philippines 2024"
            android:textColor="@color/gray_600"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:text="Author:"
                android:textColor="@color/gray_600"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/article_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="DA-AFID"
                android:textColor="@color/gray_600"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:text="Published Date:"
                android:textColor="@color/gray_600"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/article_published"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="2024-05-07"
                android:textColor="@color/gray_600"
                android:textSize="12sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/article_context"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:ellipsize="end"
            android:maxLines="3"
            android:text="As part of its efforts to promote agricultural development in the country and to strengthen its partnerships with various industry players, the Department of Agriculture (DA) once again joins forces with international exhibition organizer Informa Markets in bringing the Livestock and Aquaculture"
            android:textColor="@color/gray_600"
            android:textSize="12sp" />
    </LinearLayout>

</androidx.cardview.widget.CardView>
