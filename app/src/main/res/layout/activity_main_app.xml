                            android:layout_weight="1"
                            android:text="2024-05-06"
                            android:textColor="@color/gray_600"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="10dp"
                        android:ellipsize="end"
                        android:maxLines="3"
                        android:text="The Department of Agriculture (DA)—through the Office of the Undersecretary for Livestock, the National Livestock Program (NLP), and the Bureau of Fisheries and Aquatic Resources (BFAR)—collaborates anew with private events organizer Informa Markets in showcasing the status, trends, issues, and opportunities in the Philippine livestock, poultry, and fisheries subsectors at the Livestock and Aquaculture Philippines 2024."
                        android:textColor="@color/gray_600"
                        android:textSize="12sp" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp"
                app:cardMaxElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/article4"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:background="@drawable/card_bg"
                        android:cropToPadding="false"
                        android:scaleType="centerCrop"
                        android:src="@drawable/header4" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="DA leads PhilCZ, commits to better health for Filipinos and the animal population"
